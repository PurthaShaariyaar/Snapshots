<div class="col-12 text-center" style="row">
  <div style="margin: 25px;">
    <h1><%= @user.username %></h1>
  </div>
  <div style="margin: 25px;">
    <h4><%= @user.email %></h4>
  </div>
  <div style="margin: 25px;">
    <h4><%= @user.bio %></h4>
  </div>
  <div>
    <% if @user.avatar.attached? %>
      <%= image_tag @user.avatar, style:"width: 100px; height: 100px;" %>
    <% end %>
  </div>
  <div style="margin: 25px">
  </div>
</div>

<% if current_user.following?(@user) %>
  <%= button_to "Unfollow", unfollow_path(@user)%>
<% elsif current_user.sent_follow_request_to?(@user) %>
  <%= button_to "Cancel follow request", cancel_path(@user) %>
<% else %>
  <% if @user.id == current_user.id %>
  <% else %>
    <%= button_to "Follow", follow_path(@user)%>
  <% end %>
<% end %>
