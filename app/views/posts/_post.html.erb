<div id="<%= dom_id post %>" class="post-container" >

  <% post.images.each do |image| %>
    <%= image_tag(image, style: "object-fit: cover; width: 400px; height: 600px; border-radius: 10px; ") %>
  <% end %>

  <p>
    <%= post.title %>
  </p>

  <p>
    <%= post.description %>
  </p>

  <p>
    <%= post.keyword %>
  </p>

  <% if post.user.present? %>
    <p>
      <%= post.user.email %>
    </p>
  <% end %>


  <p>
    <%= link_to "", post, class:"post-link" %>
  </p>

</div>
